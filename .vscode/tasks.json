{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with g++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/src/Shader.cpp",
                "${workspaceFolder}/src/Camera.cpp",
                "${workspaceFolder}/src/Mesh.cpp",
                "-o",
                "${workspaceFolder}/build/output.exe",
                "-I", "${workspaceFolder}/include",
                "-L", "${workspaceFolder}/lib",
                "-lglfw3",
                "-lglew32",
                "-lopengl32",
                "-lgdi32",
                "-lfmt",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build and link GLFW, GLEW, and OpenGL"
        }
    ]
}
